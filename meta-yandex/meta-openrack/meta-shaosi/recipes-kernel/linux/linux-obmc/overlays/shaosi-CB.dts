/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/gpio/aspeed-gpio.h>

/ {
	compatible = "aspeed,ast2400";

	fragment@0 {
		target-path = "/";
		__overlay__ {
			model = "Gigabyte Shaosi CB v3.0";
		};
	};

	fragment@1 {
		target = <&leds>;
		__overlay__ {
			bmc_lan {
				label = "bmc_lan";
				gpios = <&gpio ASPEED_GPIO(B, 5) GPIO_ACTIVE_HIGH>;
				linux,default-trigger = "netdev";
			};
		};
	};

	fragment@2 {
		target = <&mac1>;
		#address-cells = <1>;
		#size-cells = <0>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "faraday,ftgmac100", "aspeed,ast2400-mac";
			reg = <0x1e680000 0x180>;
			interrupts = <3>;
			status = "okay";
			no-hw-checksum;

			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_rgmii2_default &pinctrl_mdio2_default>;

			phy-mode = "gmii";

			fixed-link {
				speed = <1000>;
				max-speed = <1000>;
				full-duplex;
			};

			mdio {
				#address-cells = <1>;
				#size-cells = <0>;

				switch: ethernet-switch@1e {
					#address-cells = <1>;
					#size-cells = <0>;
					compatible = "brcm,bcm53128";
					reset-gpios = <&gpio ASPEED_GPIO(H, 0) GPIO_ACTIVE_LOW>;
					reg = <0x1e>;

					ports {
						port0@0 {
							reg = <0>;
							label = "lan1";
						};

						port1@1 {
							reg = <1>;
							label = "lan2";
						};

						port2@2 {
							reg = <2>;
							label = "lan3";
						};

						port3@3 {
							reg = <3>;
							label = "lan4";
						};

						port4@4 {
							reg = <4>;
							label = "lan5";
						};

						port5@5 {
							reg = <5>;
							label = "lan6";
						};

						port6@6 {
							reg = <6>;
							label = "uplink";
						};

						port8@8 {
							reg = <8>;
							label = "cpu";
							phy-mode = "gmii";
							ethernet = <&mac1>;
							fixed-link {
								speed = <1000>;
								max-speed = <1000>;
								full-duplex;
							};
						};
					};
				};
			};
		};
	};

	fragment@3 {
		target = <&i2c1>;
		__overlay__ {
			status = "okay";

			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x10>;
				slave-addr = <0x36>;
			};
		};
	};

	fragment@4 {
		target = <&i2c2>;
		__overlay__ {
			status = "okay";
			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x11>;
				slave-addr = <0x36>;
			};
		};
	};

	fragment@5 {
		target = <&i2c3>;
		__overlay__ {
			status = "okay";
			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x11>;
				slave-addr = <0x36>;
			};
		};
	};

	fragment@6 {
		target = <&i2c4>;
		__overlay__ {
			status = "okay";
			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x11>;
				slave-addr = <0x36>;
			};
		};
	};

	fragment@7 {
		target = <&i2c5>;
		__overlay__ {
			status = "okay";
			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x11>;
				slave-addr = <0x36>;
			};
		};
	};

	fragment@8 {
		target = <&i2c6>;
		__overlay__ {
			status = "okay";
			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x11>;
				slave-addr = <0x36>;
			};
		};
	};

	fragment@9 {
		target = <&i2c7>;
		__overlay__ {
			status = "okay";
			clock-frequency = <400000>;
					pca9555: gpio-expander@24 {
						compatible = "nxp,pca9675";
						gpio-controller;
						#gpio-cells = <2>;
						reg = <0x24>;
					};
					sensors {
						label = "HWMON";
						compatible = "nuvoton,w83795g";
						reg = <0x2f>;
					};
					power {
						label = "POWER_BPB";
						compatible = "ti,ina219";
						reg = <0x40>;
						shunt-resistor = <500>;
					};
					tmp@48 {
						label = "TEMP_BPB";
						compatible = "national,lm75";
						reg = <0x48>;
					};
					tmp@49 {
						label = "TEMP_CB";
						compatible = "national,lm75";
						reg = <0x49>;
					};
			fru {
				compatible = "atmel,24c256";
				reg = <0x56>;
/*				pagesize = <32>; */
			};
		};
	};

	fragment@10 {
		target = <&i2c0>;
		__overlay__ {
			/* Common i2c */
			status = "okay";
			clock-frequency = <100000>;
/*
			ipmb {
				compatible = "i2c-ipmb";
				reg = <0x14>;
				slave-addr = <0x31>;
			};
*/
		};
	};
};
